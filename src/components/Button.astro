---
import "../styles/global.css";
const { title = "" } = Astro.props;
---

<button>{title}</button>

<style>
  button {
    padding: 1rem 2.0625rem;
    border-radius: 2.625rem;
    max-width: auto;
  }

  .default_dark {
    background: var(--dark);
    color: var(--white);
    border: 1px solid var(--dark);

    &:hover {
      border: 1px solid var(--dark);
      background: var(--white);
      color: var(--dark);
    }
  }

  .default_yellow {
    background: var(--yellow);
    color: var(--dark);
    border: 1px solid var(--yellow);

    &:hover {
      border: 1px solid var(--dark);
      background: var(--dark);
      color: var(--white);
    }
  }
</style>
