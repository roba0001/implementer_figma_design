---
import "../styles/global.css";
import Button from "../components/Button.astro";
---

<section>
  <div class="text">
    <h5>Subscribe Our Newsletter</h5>
    <p>Build stronger Customer Relationships with Consultalk</p>
  </div>

  <div class="input">
    <input type="text" id="mail" name="mailadress" placeholder="your mail address" />
    <button class="default_yellow">Subscribe</button>
  </div>
</section>

<style>
  button {
    padding: 1rem 2.0625rem;
    border-radius: 2.625rem;
    max-width: auto;
  }
  .default_yellow {
    background: var(--yellow);
    color: var(--dark);
    border: 1px solid var(--yellow);

    &:hover {
      border: 1px solid var(--white);
      background: var(--dark);
      color: var(--white);
    }
  }
  .input {
    flex-wrap: wrap;
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
  }
  section {
    align-items: center;
    place-content: center;
    width: minmax(30rem, 75rem);
    max-height: 15.75rem;
    background-color: var(--dark);
    /* display: grid;
    grid-template-columns: auto 1fr; */
    gap: 1.813rem;
    border-radius: 1.875rem;
    padding: 5.5rem;
    display: flex;
    flex-wrap: wrap;
  }

  .text {
    grid-column: 1/2;
  }

  h5,
  p {
    color: var(--white);
  }

  #mail {
    display: inline-flex;
    padding: 1.375rem 0.688rem 1.375rem 2.0625rem;
    align-items: center;
    gap: 0.625rem;
    border-radius: 3.375rem;
    border: 1px solid var(--light);
    background: var(--white);
  }

  #subscribe {
    display: inline-flex;
    padding: 0.9375rem 2.8125rem;
    gap: 0.625rem;
    border-radius: 2.625rem;
    background: var(--yellow);
    align-self: center;
  }
</style>
