---
import "../styles/global.css";
---

<section>
  <div class="text">
    <h5>Subscribe Our Newsletter</h5>
    <p>Build stronger Customer Relationships with Consultalk</p>
  </div>

  <div class="input">
    <input type="text" id="mail" name="mailadress" placeholder="your mail address" />
    <input type="submit" id="subscribe" value="Subscribe" />
  </div>
</section>

<style>
  .input {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  section {
    align-items: center;
    place-content: center;
    width: minmax(30rem, 75rem);
    max-height: 15.75rem;
    background-color: var(--dark);
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.813rem;
    border-radius: 1.875rem;
    padding: 5.5rem;
  }

  .text {
    grid-column: 1/2;
  }

  h5,
  p {
    color: var(--white);
  }

  #mail {
    display: inline-flex;
    padding: 1.375rem 0.688rem 1.375rem 2.0625rem;
    align-items: center;
    gap: 0.625rem;
    border-radius: 3.375rem;
    border: 1px solid var(--light);
    background: var(--white);
  }

  #subscribe {
    display: inline-flex;
    padding: 0.9375rem 2.8125rem;
    gap: 0.625rem;
    border-radius: 2.625rem;
    background: var(--yellow);
    align-self: center;
  }
</style>
