---
import "../styles/global.css";
---

<section class="full-bleed">
  <div class="flex">
    <div class="text">
      <p class="udhevet_txt">Experience</p>
      <h3>More than 25 years of experience</h3>
      <p>3000+ our clients are insured around the World</p>
    </div>
    <div class="figures">
      <div class="figure">
        <div class="parent" style="--percent: 85%">
          <h3>85%</h3>
          <div class="child"></div>
        </div>
        <h5>Consistency</h5>
      </div>
      <div class="figure">
        <div class="parent" style="--percent: 95%">
          <h3>95%</h3>

          <div class="child"></div>
        </div>
        <h5>Improvement</h5>
      </div>
      <div class="figure">
        <div class="parent" style="--percent: 90%">
          <h3>90%</h3>
          <div class="child"></div>
        </div>
        <h5>Branching</h5>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    height: 33.02644rem;
    padding: 8.25rem 0;
    --offset-pos: 7px;
    --percent: 75%;
  }

  .flex {
    display: flex;
    justify-content: space-between;
  }

  .figures {
    display: flex;
    gap: 4rem;

    .parent {
      display: flex;
      flex-direction: column;
      justify-content: center;
      border: var(--offset-pos) solid transparent;
      background:
        linear-gradient(var(--yellow), var(--yellow)) padding-box,
        conic-gradient(var(--white) var(--percent), #daae3c 0) border-box;

      align-content: center;
      text-align: center;
      h3 {
        margin-bottom: 0;
        transform: translateY(25%);
      }
    }

    .child {
      aspect-ratio: 1;
      width: 1.5rem;
      background: var(--dark);
      border: 4px solid var(--white);
      offset-path: border-box;
      offset-distance: var(--percent);
      offset-anchor: 50% var(--offset-pos);
    }

    div {
      aspect-ratio: 1;
      width: 11.6rem;
      border-radius: 1e5px;
    }
  }

  .figure {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .full-bleed {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
    background: var(--yellow);

    > * {
      grid-column: content;
    }
  }

  .text {
    display: flex;
    flex-direction: column;
    width: 23.29425rem;
    .udhevet_txt {
      width: auto;
      padding: 0rem 0.75rem;
      border-radius: 1.25rem;
      background: var(--white);
      text-transform: uppercase;
      color: var(--dark);
      align-self: flex-start;
    }

    :last-child {
      font-size: 1.1rem;
    }
  }
</style>
