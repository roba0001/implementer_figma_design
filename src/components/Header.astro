---
import "../styles/global.css";
import "../styles/reset.css";
import { Icon } from "astro-icon/components";
---

<div class="bg_color full-bleed">
  <div class="header_flex">
    <a href="/index.html" class="logo">AskExperts</a>
    <nav>
      <div class="links menu">
        <a href="/index.html">Home</a>
        <a href="/case_study.html">Case Study</a>
        <a href="/team.html">Team</a>
        <a href="/about.html">About</a>
      </div>

      <div class="burger">
        <Icon class="icon" name="burgermenu" />
      </div>
    </nav>
    <button class="popup_trigger default_yellow" popovertarget="popup">Login</button>

    <div popover id="popup">
      <div class="login">
        <h3>Dashboard Login</h3>

        <input type="text" id="email" name="enteremail" placeholder="Enter Email" />
        <input type="text" id="password" name="enterpassword" placeholder="Enter Password" />

        <input type="submit" id="popup_submit" value="Go to dashboard" />
      </div>
    </div>
  </div>
</div>

<style>
  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--primary);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }

  .header_flex {
    display: flex;
    width: 100%;
    padding: 2.375rem;
    justify-content: space-between;
    align-items: flex-start;

    backdrop-filter: blur(10.5px);
  }

  .bg_color {
    z-index: 10;
    background: rgba(27, 27, 27, 0.91);
  }

  .logo {
    color: var(--white);
    font-family: Cabin;
    font-size: 1.875rem;
    font-style: normal;
    font-weight: 600;
    line-height: 105%; /* 1.96875rem */
  }

  .links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 30px;

    a {
      color: var(--white);
      font-family: Lato;
      font-size: 1.108rem;
      font-style: normal;
      font-weight: 400;
      line-height: 160%; /* 1.77281rem */
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
  }

  button {
    padding: 0.25rem 1rem;
    border-radius: 2.625rem;
    max-width: auto;
  }

  .default_yellow {
    background: var(--yellow);
    color: var(--dark);
    border: 1px solid var(--yellow);

    &:hover {
      border: 1px solid var(--dark);
      background: var(--dark);
      color: var(--white);
    }
  }

  /* #popup {
    display: inline-flex;
    min-width: 46.875rem;
    padding: 2.5rem 3.75rem 3.75rem 3.75rem;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: 1.875rem;
    background: #181818;
  } */

  #popup {
    border-radius: 1.875rem;
    color: var(--dark);
  }

  .login {
    display: flex;
    flex-direction: column;
    align-self: stretch;

    padding: 2.5rem 3.75rem 3.75rem 3.75rem;
    border-radius: 1.875rem;
    background: var(--dark);

    min-width: 46.875rem;
    align-items: center;
    gap: 2rem;

    h3 {
      color: var(--white);
    }
  }

  #popup::backdrop {
    background: #0004;
    backdrop-filter: blur(4px);
  }

  #popup_submit {
    display: flex;
    padding: 0.9375rem 3.5rem;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: 2.625rem;
    background: var(--yellow);
  }
  #email,
  #password {
    display: flex;
    width: 23.875rem;
    padding: 1.5rem 2.0625rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
    border-radius: 3.375rem;
    border: 1px solid var(--light);

    background: var(--white);
    color: var(--dark);
  }

  @media screen and (max-width: 800px) {
    .menu,
    .links {
      display: none;
    }
    .menu a {
      padding: 1rem 0;
    }
    .burger {
      display: block;
      color: var(--yellow);
      order: 3;
      position: absolute;
    }
    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: block;
      background-color: var(--secondary);
      opacity: 100%;
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }

    nav.active .menu li {
      margin: 10px 10%;
    }
  }
  .full-bleed {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;

    > * {
      grid-column: content;
    }
  }
</style>

