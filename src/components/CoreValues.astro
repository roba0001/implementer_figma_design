<style>
  section {
    padding: 6rem 0;
    container-type: inline-size;
  }
  .full-bleed {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
    background: var(--dark);

    > * {
      grid-column: content;
    }
    @container (width<1198px) {
      display: grid;
      grid-template-columns: [full-start] 1fr [content-start] minmax(0, 800px) [content-end] 1fr [full-end];
    }
  }

  /* currentColor under fill
  hover fill */

  .flex {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 27rem;
    margin-bottom: 2.12rem;

    @container (width<1198px) {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      gap: 0;
      padding: 0 12%;

      button {
        align-self: flex-start;
      }
    }
    @container (width<745px) {
      display: flex;

      justify-content: flex-start;
      gap: 0;

      button {
        align-self: flex-start;
      }
    }
  }
  .text {
    display: flex;
    flex-direction: column;

    .udhevet_txt {
      width: auto;
      padding: 0rem 0.75rem;
      border-radius: 1.25rem;
      background: var(--yellow);
      text-transform: uppercase;
      color: var(--dark);
      align-self: flex-start;
    }
    * {
      color: var(--white);
    }
  }

  .cards {
    display: flex;
    gap: 2.25rem;
    @container (width<1198px) {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  .two_cards {
    display: flex;
    width: 75%;
    gap: 2.25rem;
    @container (width<1198px) {
      justify-content: space-even;
    }
    @container (width<745px) {
      display: flex;
      flex-direction: column;
    }
  }
  .card {
    width: 17rem;
    max-height: fit-content;
    border-radius: 1.25rem;
    border: 1px solid var(--light);
    padding: 2.25rem 1.4375rem;
    background: var(--light);

    p {
      color: var(--dark);
    }
    .readmore {
      display: flex;
      align-items: center;
      gap: 0.6rem;

      h6 {
        margin-bottom: 0;
        align-self: flex-end;
      }
      a {
        text-decoration: none;
        :hover {
          text-decoration: underline;
        }
      }
    }

    @container (width<1198px) {
      display: grid;
      grid-template-columns: auto 1fr;
      width: 100%;
      gap: 1rem;
      height: fit-content;

      :last-child {
        grid-column: 2;
      }
      /* height: 50%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: space-between;
      &:last-child {
      } */
    }

    .card_content > * {
      margin-bottom: 0.5rem;
    }
  }

  button {
    padding: 1rem 2.0625rem;
    border-radius: 2.625rem;
    min-width: 10rem;
  }
  .default_white {
    background: var(--light);
    color: var(--dark);
    border: 1px solid var(--light);
    margin-top: 2rem;

    &:hover {
      border: 1px solid var(--yellow);
      background: var(--dark);
      color: var(--yellow);
    }
  }

  .small_icon {
    width: 3.3rem;
  }

  .pil {
    width: 1.25rem;
    align-self: center;
  }
</style>
