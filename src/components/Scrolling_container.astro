      grid-column: content;
    }
  } */

  /* section.full-bleed {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
    padding-inline: max(1rem, 50% - 1200px / 2);
  } */

  [data-icon="tavle"] {
    width: 6.58675rem;
    margin-bottom: 1.06rem;
  }
  .small_icon {
    width: 2.25rem;
    margin-bottom: 1.5rem;
  }

  .knapper {
    display: flex;
    gap: 1.62rem;
    align-items: flex-end;

    * {
      height: 4.34594rem;
    }
  }

  > ul {
    scroll-snap-type: x mandatory;
    padding-inline: max(1rem, 50% - var(--content-width) / 2);
    padding-block-end: 1rem;

    li {
      scroll-snap-align: center;
    }
  }

  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;

    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      border-radius: 8px;
      font-size: 1rem;
      padding: 2.75rem 2.1875rem;
      align-self: start;

      h3 {
        font-weight: 700;
        font-size: 1.5625rem;
      }
    }
  }

  h2,
  h3 {
    all: revert;
    color: #181818;
    margin-block: 0 0.625rem;
    line-height: 1.125;
  }

  h2 {
    font-size: 2.8125rem;
  }

  header {
    color: #595566;
    display: flex;
    justify-content: space-between;

    p {
      max-inline-size: 67ch;
    }
  }
</style>
